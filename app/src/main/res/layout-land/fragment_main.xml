<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:text="@string/land_button1"
            android:id="@+id/button1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="myClickHandler" />

        <Button
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:text="@string/land_button2"
            android:id="@+id/button2"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="myClickHandler" />

        <Button
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:text="@string/land_button3"
            android:id="@+id/button3"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="myClickHandler" />

        <Button
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:text="@string/land_button4"
            android:id="@+id/button4"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="myClickHandler" />

        <Button
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:text="@string/land_button5"
            android:id="@+id/button5"
            android:layout_margin="10dp"
            android:onClick="myClickHandler" />

        <Button
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:text="@string/land_button6"
            android:id="@+id/button6"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:text="@string/land_button7"
            android:id="@+id/button7"
            android:layout_margin="10dp"
            android:onClick="myClickHandler" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_margin="20dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/button8"
            android:id="@+id/button8"
            android:gravity="center"
            android:onClick="myClickHandler"
            android:layout_weight="1"
            android:clickable="true"
            android:enabled="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/button9"
            android:id="@+id/button9"
            android:onClick="myClickHandler"
            android:layout_weight="1"
            android:clickable="true"
            android:enabled="true"
            android:layout_marginLeft="30dp" />

    </LinearLayout>

</LinearLayout>